# CloudCare - Shared Environment Configuration
# Copy this to .env and fill in your values

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# PostgreSQL Database (shared by CloudCare APIs and n8n)
POSTGRES_USER=cloudcare
POSTGRES_PASSWORD=cloudcare_password_change_me
POSTGRES_DB=cloudcare_db

# Full DATABASE_URL for Prisma (constructed from above)
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@localhost:5432/${POSTGRES_DB}

# =============================================================================
# REDIS CONFIGURATION (for n8n queue)
# =============================================================================
REDIS_PASSWORD=redis_password_change_me

# =============================================================================
# N8N CONFIGURATION
# =============================================================================
# n8n Authentication
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=admin_password_change_me

# n8n Encryption Key (generate with: openssl rand -hex 32)
N8N_ENCRYPTION_KEY=your_encryption_key_here_generate_with_openssl_rand_hex_32

# n8n URLs
N8N_BASE_URL=http://localhost:5678

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
ENVIRONMENT=development
DEBUG=True

# Security
SECRET_KEY=your-secret-key-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Origins (comma-separated) - includes n8n
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:5678

# =============================================================================
# API SERVER PORTS
# =============================================================================
PATIENT_API_PORT=8001
DOCTOR_API_PORT=8002
HOSPITAL_API_PORT=8003
EMERGENCY_API_PORT=8004
WEARABLES_API_PORT=8005

# =============================================================================
# N8N SERVICE PORTS
# =============================================================================
N8N_PORT=5678
REDIS_PORT=6379
POSTGRES_PORT=5432

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=INFO
